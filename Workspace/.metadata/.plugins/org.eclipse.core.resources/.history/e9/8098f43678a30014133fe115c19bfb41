package com.mygdx.game;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.math.Circle;
import com.badlogic.gdx.math.Intersector;
import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.math.Shape2D;

public class Collisions {
	
	private Shape2D collider;
	//true = rectangle false = circle
	private boolean shape;

	public Collisions() {
		
	}
	
	public void setRectangle(float x, float y, float width, float height){
		collider = new Rectangle();
		((Rectangle) collider).set(x, y, width, height);
		shape = true;
	}
	
	public void setCircle(float x, float y, float radius){
		collider = new Circle();
		((Circle) collider).set(x, y, radius);
		shape = false;
	}
	
	public void isColliding(Shape2D other){
		try{
			if(((Circle) other).radius != 0f){
				if(shape){
					Intersector.overlaps((Circle) other, (Rectangle) collider);
				}
				else{
					Intersector.overlaps((Circle) other, (Circle) collider);
				}
			}
		}
		catch (java.lang.ClassCastException e){
			if(shape){
				Intersector.overlaps((Rectangle) collider, (Rectangle) other);
			}
			else{
				Intersector.overlaps((Circle) collider, (Rectangle) other);
			}
		}
		Gdx.app.log("g","gg");
			if(shape){
				Gdx.app.log("g","gg");
				if(((Circle) other).radius == 0f){
					Gdx.app.log("g","gg");
					 Intersector.overlaps((Rectangle) collider, (Rectangle) other);
				}
				else{
					 Intersector.overlaps((Circle) other, (Rectangle) collider);
				}
			}
	}

	public Shape2D getCollider() {
		return collider;
	}
	
	
}
